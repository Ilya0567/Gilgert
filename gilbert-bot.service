[Unit]
Description=Gilbert Bot Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/project/Assistant
ExecStart=/bin/bash /root/project/Assistant/restart_bot.sh
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=gilbert-bot

[Install]
WantedBy=multi-user.target 